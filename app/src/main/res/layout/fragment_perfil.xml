<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.perfil.PerfilFragment" >

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Detalles del perfil"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearPerfil1"
        android:layout_width="340dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/borde_personalizado"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17">

        <TextView
            android:id="@+id/textviewdniperfil"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Dni:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/tvDniPerfil"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="dni..."
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearPerfil2"
        android:layout_width="341dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/borde_personalizado"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearPerfil1">

        <TextView
            android:id="@+id/textviewapellidoperfil"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Apellido:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/tvApellidoPerfil"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="apellido..."
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearPerfil3"
        android:layout_width="340dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/borde_personalizado"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearPerfil2">

        <TextView
            android:id="@+id/textviewnombreperfil"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Nombre:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/tvNombrePerfil"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="nombre..."
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearPerfil4"
        android:layout_width="340dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/borde_personalizado"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearPerfil3">

        <TextView
            android:id="@+id/textviewtelefonoperfil"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Teléfono:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/tvTelefonoPerfil"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="teléfono..."
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearPerfil5"
        android:layout_width="340dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/borde_personalizado"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearPerfil4">

        <TextView
            android:id="@+id/textviewcorreoperfil"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Correo:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/tvCorreoPerfil"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="correo..."
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivAvatarPerfil"
        android:layout_width="157dp"
        android:layout_height="159dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearPerfil5"
        app:layout_constraintVertical_bias="0.05"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnCambiarClave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/primary"
        android:text="Cambiar clave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivAvatarPerfil"
        app:layout_constraintTop_toBottomOf="@+id/btnGuardarEditarPerfil" />

    <Button
        android:id="@+id/btnGuardarEditarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="64dp"
        android:backgroundTint="@color/success"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivAvatarPerfil"
        app:layout_constraintTop_toBottomOf="@+id/linearPerfil5" />

    <Button
        android:id="@+id/btnPerfilEditarAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/primary"
        android:text="Editar avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivAvatarPerfil"
        app:layout_constraintTop_toBottomOf="@+id/btnCambiarClave"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>